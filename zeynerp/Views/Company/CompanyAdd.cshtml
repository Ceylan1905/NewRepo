@using zeynerp.Entities
@model Company
@{
    ViewBag.Title = "CompanyAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Cari Ekle</h2>

        <div class="right-wrapper text-right pr-3">
            <ol class="breadcrumbs">
                <li>
                    <a href="/panel">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li><span>Tanımlamalar</span></li>
                <li><a href="/tanimlamalar/cari-listesi"><span> Cari Listesi</span></a></li>
                <li><span>Cari Ekle</span></li>
            </ol>
        </div>
    </header>

    @using (Ajax.BeginForm("CompanyAdd", "Company", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess" }, new { @class = "action-buttons-fixed", enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col">
                <section class="card">
                    <div class="card-body">
                        <div style="text-align:center"> <strong> Firma Grup Tanım </strong> </div>
                        <div class="form-group row align-items-center">
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault"> Cari Türü </label>
                            <div class="col-lg-6">
                                <div class="editor-field">
                                    @Html.HiddenFor(model => model.Kind, new { id = "CompanyKind" })
                                    Müşteri: <input type="checkbox" id="r" onchange="getSelected()" value="Müşteri" />
                                    Tedarikçi: <input id="w" type="checkbox" onchange="getSelected()" value="Tedarikçi" />
                                    Taşeron: <input type="checkbox" id="r" onchange="getSelected()" value="Taşeron" />
                                    Resmi: <input type="checkbox" id="r" onchange="getSelected()" value="Resmi" />
                                    Banka: <input type="checkbox" id="r" onchange="getSelected()" value="Banka" />
                                    Ortaklar: <input type="checkbox" id="r" onchange="getSelected()" value="Ortaklar" />

                                    @Html.ValidationMessageFor(model => model.Kind)
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Cari Adı </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-lg", name = "companyName", type = "text" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Cari Kısa Adı </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.ShortName, new { @class = "form-control form-control-lg", name = "companyShortName", type = "text" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Cari Telefonu </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control form-control-lg", name = "companyPhone", type = "text" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Cari Fax </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.Fax, new { @class = "form-control form-control-lg", name = "companyFax", type = "text" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Cari E-Posta </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.Eposta, new { @class = "form-control form-control-lg", name = "companyEposta", type = "text" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Cari Vergi Dairesi </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.TaxAdministration, new { @class = "form-control form-control-lg", name = "companyTaxAdministration", type = "text" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Cari Vergi No </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.TaxNumber, new { @class = "form-control form-control-lg", name = "companyTaxNumber", type = "text" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Fatura Adresi </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.BillingAddress, new { @class = "form-control form-control-lg", name = "companyBillingAddress", type = "text" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputMaritalStatus"> Onay Durumu </label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(m => m.Confirmation, new SelectList(Enum.GetValues(typeof(YesNo))), "-Seç-", new { @class = "form-control form-control-modern", @name = "companyCorfirmation" })
                            </div>
                        </div>

                        <div class="mb-1 text-center">
                            <div class="mb-3 ml-1 mr-1">
                                @Html.ActionLink("Yeni", "CompanyAdd", "Company", new { @class = "btn btn-primary btn-lg mb-3 ml-1 mr-1" })
                                <button type="submit" class="btn btn-primary btn-lg mb-3 ml-1 mr-1">Kaydet</button>
                                @Html.ActionLink("Liste", "CompanyList", "Company", new { @class = "btn btn-primary btn-lg mb-3 ml-1 mr-1" })
                            </div>
                        </div>
                    </div>

                </section>
            </div>
        </div>
    }
</section>

<script>
    function OnSuccess() {
        location.href = "@Url.Content("cari-listesi")";
    }
</script>