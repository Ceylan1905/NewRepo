@using zeynerp.Entities
@model CompanyGroup
@{
    ViewBag.Title = "SupplierAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="body">
    <header class="page-header">
        <h2>Tanımlamalar / Tedarikçi Grup</h2>
    </header>

    <!-- start: page -->
    @using (Html.BeginForm("SupplierAdd", "Supplier", FormMethod.Post))
    {
        <div class="row">
            <div class="col">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3-5 col-xl-4-5 offset-lg-2">
                            <div style="text-align:center"> <strong> Firma Grup Tanım </strong> </div>
                            <div class="form-group row align-items-center">
                            </div>
                            <div class="form-group row align-items-center">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-right mb-0"> Grup Adı</label>
                                <div class="col-lg-7 col-xl-6">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-lg", name = "supplierName", type = "text" })
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-right mb-0"> Aktif </label>
                                <div class="col-lg-7 col-xl-6">
                                    @Html.DropDownListFor(m => m.Confirmation, new SelectList(Enum.GetValues(typeof(Active))), "-Seç-", new { @class = "form-control form-control-modern", @name = "supplierCorfirmation" })
                                </div>
                            </div>
                            <div class="row action-buttons" style="margin-left:35%">
                                <div class="col-12 col-md-auto">
                                    @Html.ActionLink("Yeni", "SupplierAdd", "Supplier", new { @class = "btn btn-primary btn-lg " })
                                </div>
                                <div class="col-12 col-md-auto">
                                    <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                                </div>
                                <div class="col-12 col-md-auto">
                                    @Html.ActionLink("Liste", "SupplierList", "Supplier", new { @class = "btn btn-primary btn-lg " })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>