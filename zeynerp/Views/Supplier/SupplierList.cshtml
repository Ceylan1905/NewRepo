@using zeynerp.Entities
@model IEnumerable<zeynerp.Entities.CompanyGroup>
@{
    ViewBag.Title = "SupplierList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section role="main" class="content-body content-body-modern mt-0">
    <header class="page-header">
        <h2> Tanımlamalar / Tedarikçi Grup </h2>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="col">

            <div class="card card-modern">
                <div class="card-body">
                    <div class="datatables-header-footer-wrapper">
                        <div class="datatable-header">
                            <div style="text-align:center"> <strong> Firma Grup Listesi </strong></div>
                            <div class="row align-items-center mb-3">
                                <div class="col-8 col-lg-auto ml-auto mb-3 mb-lg-0">
                                    <div class="d-flex align-items-lg-center flex-column flex-lg-row">
                                        <label class="ws-nowrap mr-3 mb-0">Filter By:</label>
                                        <select class="form-control select-style-1 filter-by" name="filter-by">
                                            <option value="all" selected>All</option>
                                            <option value="1"></option>
                                            <option value="2">Company Name</option>
                                            <option value="3">Slug</option>
                                            <option value="4">Parent Category</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-4 col-lg-auto pl-lg-1 mb-3 mb-lg-0">
                                    <div class="d-flex align-items-lg-center flex-column flex-lg-row">
                                        <label class="ws-nowrap mr-3 mb-0">Show:</label>
                                        <select class="form-control select-style-1 results-per-page" name="results-per-page">
                                            <option value="12" selected>12</option>
                                            <option value="24">24</option>
                                            <option value="36">36</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-auto pl-lg-1">
                                    <div class="search search-style-1 search-style-1-lg mx-lg-auto">
                                        <div class="input-group">
                                            <input type="text" class="search-term form-control" name="search-term" id="search-term" placeholder="Search Category">
                                            <span class="input-group-append">
                                                <button class="btn btn-default" type="submit"><i class="bx bx-search"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-auto mb-3 mb-lg-0">
                                    <a href="@Url.Action("SupplierAdd","Supplier")" class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4"> Yeni </a>
                                </div>
                            </div>
                        </div>
                        <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-ecommerce-list" style="min-width: 550px;">
                            <thead>
                                <tr>
                                    <th width="8%"> Id </th>
                                    <th width="10%"> Adı </th>
                                    <th width="10%"> Aktif </th>
                                    <th width="10%"> Detay </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int totalNumberOfCompanyGroups = 0;}
                                @foreach (var item in Model)
                                {
                                    totalNumberOfCompanyGroups++;
                                    <tr>
                                        <td> @totalNumberOfCompanyGroups </td>
                                        <td><a href=""> @item.Id </a></td>
                                        <td> <strong> @item.Name </strong> </td>
                                        @if (@item.Confirmation == Active.Aktif)
                                        {
                                            <td style="color:green"> <strong> @item.Confirmation </strong> </td>
                                        }
                                        else
                                        {
                                            <td style="color:red"> <strong> @item.Confirmation </strong> </td>
                                        }
                                        <td> <a href="@Url.Action("SupplierDetail","Supplier", new { id=item.Id})"> Detay </a>  </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <hr class="solid mt-5 opacity-4">
                        <div class="datatable-footer">
                            <div style="text-align:center"> <strong> Toplam Firma Grup Sayısı: @totalNumberOfCompanyGroups  </strong> </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end: page -->
</section>
