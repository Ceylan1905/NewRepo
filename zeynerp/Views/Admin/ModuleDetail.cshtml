@using zeynerp.BL
@using zeynerp.Entities.Admin
@model BL_Result<Module>
@{
    ViewBag.Title = "ModuleDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Modül Detay</h2>

        <div class="right-wrapper text-right mr-3">
            <ol class="breadcrumbs">
                <li>
                    <a href="/Admin/Dashboard">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li>
                    <a href="/Admin/Category">
                        <span>Kategori</span>
                    </a>
                </li>
                <li>
                    <a href="/Admin/CategoryDetail/@Model.Result.CategoryId">
                        <span>Modül</span>
                    </a>
                </li>
                <li>
                    <span>Düzenle</span>
                </li>
            </ol>
        </div>
    </header>
    @using (Html.BeginForm("ModuleDetail", "Admin", FormMethod.Post, new { @class = "action-buttons-fixed", enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col">
                <section class="card card-modern card-big-info">
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-lg-2-5 col-xl-1-5">
                                <div class="thumb-info mb-3">
                                    <i class="card-big-info-icon bx bx-slider-alt"></i>
                                    <h2 class="card-big-info-title">@Model.Result.ModuleName</h2>
                                </div>
                            </div>
                            <div class="col-lg-3-5 col-xl-4-5">
                                @Html.HiddenFor(x => x.Result.Id)
                                @Html.HiddenFor(x => x.Result.CategoryId)
                                <div class="form-group row align-items-center">
                                    <div class="col-lg-11 col-xl-10 mb-3 mb-lg-0 m-auto">
                                        <label for="inputFirstName">Modül Adı</label>
                                        @Html.TextBoxFor(x => x.Result.ModuleName, new { id = "inputFirstName", @class = "form-control", type = "text" })
                                        @Html.ValidationMessageFor(x => x.Result.ModuleName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row align-items-center">
                                    <div class="col-lg-6 col-xl-5 mb-3 mb-lg-0 ml-auto">
                                        <label for="inputFirstName">Sıra</label>
                                        @Html.TextBoxFor(x => x.Result.Order, new { id = "inputFirstName", @class = "form-control", type = "text" })
                                        @Html.ValidationMessageFor(x => x.Result.Order, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-lg-6 col-xl-5 mr-auto">
                                        <label for="inputLastName">Durum</label>
                                        @Html.DropDownListFor(x => x.Result.Status, new List<SelectListItem> {
                                            new SelectListItem { Text = "Aktif", Value = "Aktif"},
                                            new SelectListItem { Text = "Pasif", Value = "Pasif" } }, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Result.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row align-items-center">
                                    <div class="col-lg-6 col-xl-5 mb-3 mb-lg-0 ml-auto">
                                        <label for="inputFirstName">Fiyat</label>
                                        @Html.TextBoxFor(x => x.Result.Price, new { id = "inputFirstName", @class = "form-control", type = "text" })
                                        @Html.ValidationMessageFor(x => x.Result.Price, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-lg-6 col-xl-5 mr-auto">
                                        <label for="inputLastName">Para Birimi</label>
                                        @Html.DropDownListFor(x => x.Result.CurrencyUnit, new List<SelectListItem> {
                                            new SelectListItem { Text = "₺", Value = "₺"},
                                            new SelectListItem { Text = "$", Value = "$"},
                                            new SelectListItem { Text = "€", Value = "€" } }, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Result.CurrencyUnit, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row align-items-center">
                                    <div class="col-lg-12 col-xl-10 ml-auto mr-auto">
                                        <label for="inputAddress">Açıklama</label>
                                        @Html.TextAreaFor(x => x.Result.Comment, new { id = "inputAddress", @class = "form-control", rows = "5", maxlength = "140", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Result.Comment, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <div class="row action-buttons">
            <div class="col-12 col-md-auto">
                <button type="submit" class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1" data-loading-text="Loading...">
                    <i class="bx bx-save text-4 mr-2"></i> Kaydet
                </button>
            </div>
            <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
                <a href="/Admin/CategoryDetail/@Model.Result.CategoryId" class="cancel-button btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">İptal</a>
            </div>
        </div>
    }
</section>