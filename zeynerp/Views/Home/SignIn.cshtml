@using zeynerp.Entities.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Sign.cshtml";
}


<div class="card-title-sign mt-3 text-right">
    <h2 class="title text-uppercase font-weight-bold m-0"><i class="fas fa-user mr-1"></i> Giriş</h2>
</div>
<div class="card-body">
    @using (Html.BeginForm("SignIn", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group mb-3">
            <label>E-mail Adres</label>
            <div class="input-group">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-lg", name = "email", type = "text" })
                <span class="input-group-append">
                    <span class="input-group-text">
                        <i class="fas fa-envelope"></i>
                    </span>
                </span>
            </div>
        </div>
        <div class="form-group mb-3">
            <div class="clearfix">
                <label class="float-left">Şifre</label>
                <a href="pages-recover-password.html" class="float-right">Şifreni mi unuttun?</a>
            </div>
            <div class="input-group">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-lg", name = "pwd", type = "password" })
                <span class="input-group-append">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i>
                    </span>
                </span>
            </div>
        </div>

        <div class="row">
            @*<div class="col-sm-8">
                    <div class="checkbox-custom checkbox-default">
                        <input id="RememberMe" name="rememberme" type="checkbox" />
                        <label for="RememberMe">Remember Me</label>
                    </div>
                </div>*@
            <div class="col-sm-4 offset-sm-8 text-right">
                <button type="submit" class="btn btn-primary btn-lg mt-2">Giriş</button>
            </div>
        </div>

        <p class="mt-3 text-center">
            Henüz bir hesabınız yok mu?
            @Html.ActionLink("Kaydol", "SignUp", "Home")
        </p>
    }
</div>

